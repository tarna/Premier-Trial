generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./data.db"
}

model User {
    id String @id

    guild   Guild  @relation(fields: [guildId], references: [id])
    guildId String

    exp   Int @default(0)
    level Int @default(0)

    messages          Message[]
    punishments       Punishment[] @relation("UserPunishments")
    issuedPunishments Punishment[] @relation("IssuedPunishments")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Guild {
    id String @id

    welcomeMessage String?
    welcomeChannel String?

    users       User[]
    messages    Message[]
    punishments Punishment[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Message {
    id String @id

    user   User   @relation(fields: [userId], references: [id])
    userId String

    guild   Guild  @relation(fields: [guildId], references: [id])
    guildId String

    content String
    sentAt  DateTime @default(now())
}

model Punishment {
    id String @id @default(uuid())

    user   User   @relation("UserPunishments", fields: [userId], references: [id])
    userId String

    punisher   User   @relation("IssuedPunishments", fields: [punisherId], references: [id])
    punisherId String

    guild   Guild  @relation(fields: [guildId], references: [id])
    guildId String

    type   PunishmentType
    reason String?

    expired   Boolean   @default(false)
    expiresAt DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum PunishmentType {
    KICK
    BAN
    MUTE
}

model Fact {
    id String @id

    message String
    usages  Int    @default(0)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
